{
  "rules": {
    //"adjacent-overload-signatures": true,
    "align": [
      true,
      "statements"
    ],
    "arrow-parens": true,
    "ban": false,
    "ban-comma-operator": true,
    "class-name": false,
    "comment-format": false, //[ true, "check-space" ],
    //"completed-docs": [ true, "classes", "enums", "functions", "interfaces" ],
    "curly": true,
    "cyclomatic-complexity": [ true, 20 ],
    "deprecation": true,
    "encoding": true,
    "eofline": true,
    "file-name-casing": [ false ], // TODO: Standardize file name case
    "forin": false,
    "indent": [
      true,
      "spaces"
    ],
    "jsdoc-format": [ true, "check-multiline-start" ],
    "label-position": true,
    "linebreak-style": [ true, "LF" ],
    "match-default-export-name": true,
    "max-file-line-count": [ true, 700 ],
    "max-line-length": [
      true,
      120
    ],
    "member-access": false,
    "member-ordering": false, // TODO: Can we get this working how we want it?
    "new-parens": true,
    "no-angle-bracket-type-assertion": true,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": [ true, 1 ],
    "no-console": false, //[ true, "log", "debug", "info", "warn", "error" ],
    "no-construct": true,
    "no-constructor-vars": false,
    "no-debugger": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": false,
    "no-empty-interface": false, // Possibly explore later
    "no-eval": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [ true, "dev" ],
    "no-import-side-effect": false, // Importing CSS files violates this
    "no-inferrable-types": false,
    "no-internal-module": false,
    "no-invalid-template-strings": true,
    "no-invalid-this": false,
    "no-irregular-whitespace": true,
    "no-magic-numbers": false,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-namespace": true,
    "no-null-keyword": false,
    "no-parameter-properties": false,
    "no-redundant-jsdoc": true,
    "no-reference": true,
    "no-require-imports": true,
    "no-return-await": true,
    "no-shadowed-variable": false, // Our interfaces and injected fields are named the same
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-submodule-imports": false, // Possibly explore true later
    "no-switch-case-fall-through": true,
    "no-this-assignment": true,
    "no-trailing-whitespace": true,
    //"no-unbound-method": true,
    "no-unnecessary-callback-wrapper": true,
    "no-unnecessary-class": false, // Possibly explore later
    "no-unnecessary-qualifier": true,
    "no-unnecessary-type-assertion": true,
    //"no-unsafe-any": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-finally",
      "check-whitespace"
    ],
    "only-arrow-functions": true,
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-readonly": true,
    "prefer-while": true,
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "radix": true,
    "restrict-plus-operands": false,
    "semicolon": true,
    "strict-boolean-expressions": false,
    "strict-type-predicates": true,
    "switch-final-break": [ true, "always" ],
    "trailing-comma": [
      true,
      { "singleline": "never", "esSpecCompliant": true }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "use-default-type-parameter": true,
    "use-isnan": true,
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case",
      "ban-keywords",
      "allow-leading-underscore" // TODO: Remove me
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}
